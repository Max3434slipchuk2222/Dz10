@model List<WebAliona.Data.News>

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TimesNews</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <h1 class="text-center my-4">Новини дня:</h1>
    <div class="container">
        <div class="row row-cols-1 row-cols-md-2 g-3">
            @foreach (var news in Model)
            {
                <div class="col">
                    <div class=" h-100 shadow-sm">
                        <img src="@news.Image" class="card-img-top" alt="@news.Title">
                        <div class="">
                            <h5 class="text-center">@news.Title</h5>
                            <p class="text-center text-muted">@news.Summary</p>
                            <p class="">@news.Content</p>
                        </div>
                        <div class="text-end">
                            <small class="text-muted">Slug: @news.Slug</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>